{
    "name": "jenkins",
    "description": "Jenkins Server",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "default_attributes": {
        "jenkins": {
            "server": {
                "plugins": ["git", "chucknorris", "greenballs", "cobertura", "maven-plugin", "dashboard-view", "violations"],
                "home": "/var/lib/jenkins", "host": "127.0.0.1" },
            "http_proxy": { "host_name": "jenkins.joltem.local" }
        }
    },
    "run_list": [
        "role[app]",
        "recipe[nginx]",
        "recipe[java]",
        "recipe[jenkins::server]",
        "recipe[joltem::jenkins]"
    ]
}



