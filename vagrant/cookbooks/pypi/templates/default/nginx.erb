server {
  server_name       <%= node[:pypi][:host] %>;

  location / {
    include uwsgi_params;
    uwsgi_pass 127.0.0.1:<%= node[:pypi][:port] %>;
  }

  error_log         <%= node[:nginx][:directories][:log_dir] %>/pypi-error.log;
  access_log        <%= node[:nginx][:directories][:log_dir] %>/pypi-access.log;
}

